@using HexGridInterfaces.SvgHelpers
@using HexGridInterfaces.Structs

<svg @ref="Svg" xmlns="http://www.w3.org/2000/svg" viewBox="@ViewBox">
    <rect x="@RectOriginX" y="@RectOriginY" width="100%" height="100%" fill="@BackgroundFill" stroke="#000000" stroke-width="1" />
    <g id="Grid" >
        <g id="Hexagons" stroke="@HexStroke" stroke-width="@HexStrokeWidth" >
            @foreach (ISvgHexagon h in Hexagons.Values)
            {
                <BPolygon @key="h" Id="@h.ID" Points="@h.Points" IsSelected="@h.IsSelected" StarD="@h.CenterD" HexFill="@HexFill" StarFill="@HexStroke" ShowStar="@ShowStars" />
            }
        </g>
        <g id="Megahexes" stroke="@MegaStroke" stroke-width="@MegaStrokeWidth">
            @foreach (SvgMegagon m in Megagons.Values)
            {
                <BPath @key="m" Id="@m.Id" D="@m.D" />
            }
        </g>
    </g>
</svg>
